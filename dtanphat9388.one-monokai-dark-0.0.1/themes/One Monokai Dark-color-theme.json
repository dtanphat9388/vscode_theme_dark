
{
  //
  // MARK  BASE_COLOR
  //

  "tokenColors": [
    {
      "name": "#bbbbbb",
      "scope": [
        "source",
        "text.html.markdown",
      ],
      "settings": {
        "foreground": "#bbbbbb"
      }
    },

    {
      "name": "Comment",
      "scope": [
        "comment",
        "string.comment"
      ],
      "settings": {
        "foreground": "#676f7d",
        "fontStyle": "italic"
      }
    },

    // NOTE 
    {
      "name": "#56b6c2",
      "scope": [
        // User-defined constant
        "constant.character",
        "constant.other",
        // Storage
        "storage",
        "keyword.control",
        // Tag Class and ID
        "entity.name.tag.class",
        "entity.name.tag.id",
        // Library constant
        "support.constant",
        // StyleSheet Variable
        "variable.css",
        "variable.scss",
        "variable.less",
        "variable.sass",
        // StyleSheet Function
        "function.css",
        "function.scss",
        "function.less",
        "function.sass",
        // JSON String
        "structure.dictionary.property-name.json",
        // module.exports
        "support.type.object.module"
      ],
      "settings": {
        "foreground": "#2aa198"
      }
    },

    // NOTE  KEYWORKS, OPERATORS, NUMBER, ...
    {
      "name": "#e06c75",
      "scope": [
        "keyword",
        // Language Variable
        "variable.language",
        // Built-in constant
        "constant.language",
        // Tag name
        "entity.name.tag",
        "entity.name.tag.class.js",
        "entity.name.tag.class.jsx",
        "support.class.component.js",
        // number
        "constant.numeric",
      ],
      "settings": {
        "foreground": "#e06c75"
      }
    },

    
    //
    // MARK  DATA TYPE
    //


    // NOTE  STRING
    {
      "name": "#e5c07b",
      "scope": [
        "string",
        "meta.object-literal.key.js", // object key
        // CSS selector
        "meta.selector.css",
        "constant.other.character-class.range.regexp",
      ],
      "settings": {
        "foreground": "#EBD996"
      }
    },

    // NOTE  FUNCTION CALL
    {
      "name": "#62BAE4",
      "scope": [
        /* function call (ex: ()) */
        "meta.brace.round",             
       /*  if, else, ... */
        "keyword.control.conditional",  
        /* for, while, ... */
        "keyword.control.flow",         
        /* function call */
        "meta.function-call",     
        /* Variable */
        "variable.readwrite",
        "variable.readwrite.other.block",
        // class super function
        "variable.language.super",
        "new.expr",
        // Template expression JS | TS
        "punctuation.definition.character-class.regexp",
        "punctuation.definition.group.regexp",
        "punctuation.definition.template-expression.begin.js",
        "punctuation.definition.template-expression.end.js",
        "punctuation.definition.template-expression.begin.ts",
        "punctuation.definition.template-expression.end.ts",
      ],
      "settings": {
        "foreground": "#62BAE4"
      }
    },

    {
      "name": "Function arrow sign",
      "scope": "storage.type.function.arrow",
      "settings": {
        "fontStyle": "italic",
        "foreground": "#bbbbbb"
      }
    },

    {
      "name": "Function argument",
      "scope": "variable.parameter",   
     "settings": {
        "fontStyle": "italic",
        "foreground": "#d19a66"
      }
    },

  
    //
    // MARK  LANGUAGE
    //


    // NOTE  JS
    {
      "name": "#56b6c2",
      "scope": [
        "meta.template.expression"
      ],
      "settings": {
        "foreground": "#bbbbbb"
      }
    },

    // NOTE  JSON
    {
      "name": "#56b6c2",
      "scope": [
        "support.type.property-name.json",
        "support.type.property-name.json.comments",
      ],
      "settings": {
        "foreground": "#bbbbbb"
      }
    },

    // NOTE  REGEX
    {
      "name": "#56b6c2",
      "scope": [
        "constant.other.character-class.regexp",
        "keyword.control.anchor.regexp",
      ],
      "settings": {
        "foreground": "#bbbbbb"
      }
    },

    // NOTE  MARKDOWN
    {
      "name": "#56b6c2",
      "scope": [
       /* base color */
        "meta.embedded.block.shellscript"
      ],
      "settings": {
        "foreground": "#bbbbbb"
      }
    },
    
    {
      "name": "#56b6c2",
      "scope": [
        "markup.bold.markdown"
      ],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#ffffff"
      }
    },
    
    {
      "name": "#56b6c2",
      "scope": [
        "markup.italic.markdown"
      ],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#ffffff"
      }
    },

    {
      "name": "#56b6c2",
      "scope": [
       /* link */
        "markup.underline.link",
        "markup.quote.markdown"
      ],
      "settings": {
        "foreground": "#62BAE4"
      }
    },

    {
      "name": "#56b6c2",
      "scope": [
       /* heading */
        "markup.heading.markdown",
        "meta.separator.markdown"
      ],
      "settings": {
        "foreground": "#2aa198"
      }
    },

    {
      "name": "#56b6c2",
      "scope": [
       /* block code */
        "markup.fenced_code.block.markdown"
      ],
      "settings": {
        "foreground": "#e06c75"
      }
    },

    
  ],
  
